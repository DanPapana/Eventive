@using Eventive.Models.Events;
@model EventListViewModel;

<div class="row mt-5 justify-content-center">
    @foreach (var oneEvent in Model.EventViewModelList)
    {
        <div class="card text-light bg-secondary mx-3 mb-3">
            <div class="card-img-body">
                @if (!string.IsNullOrEmpty(oneEvent.EventImage))
                {
                    <img class="card-img-top" src="data:image/png;base64, @oneEvent.EventImage" alt="Event thumbnail">
                }
                else
                {
                    <img class="card-img-top" src="~/images/other.png" alt="Event thumbnail">
                }
                <div class="card-img-overlay" onclick="loadDetails('@oneEvent.Id')" data-toggle="modal" data-target="#detailsModal">
                    <div class="details-date d-flex justify-content-between">
                        <div id="deadline" class="event-date">@oneEvent.Deadline</div>
                        <div class="event-category">@oneEvent.Category</div>
                    </div>
                    <div class="details-text">
                        <div class="d-flex justify-content-between">
                            <p>Date:</p>
                            <p>@oneEvent.OccurenceDate</p>
                            <p>@oneEvent.EventTime</p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <p>Maximum participants:</p>
                            <p>@oneEvent.MaximumParticipants</p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <p>Attendance fee:</p>
                            <p>@oneEvent.ParticipationFee</p>
                        </div>
                        <div class="d-flex justify-content-start">
                            Location:
                        </div>
                        <div class="d-flex justify-content-start">
                            @oneEvent.Location
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-body d-flex flex-column">
                <h5 class="card-title">@oneEvent.Title</h5>
                <div class="mt-auto">
                    <button type="button" onclick="loadEditEvent('@oneEvent.Id')" data-toggle="modal" data-target="#editEventModal" class="btn btn-light btn-lg btn-block">Edit Event</button>
                    <button type="button" onclick="loadRemoveEvent('@oneEvent.Id')" data-toggle="modal" data-target="#removeEventModal" class="btn btn-light btn-lg btn-block">Delete Event</button>
                </div>
            </div>
        </div>
    }
</div>
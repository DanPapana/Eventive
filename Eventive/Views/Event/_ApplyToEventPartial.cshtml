@using Eventive.Models.Events
@model ApplyToEventViewModel

<input type="hidden" asp-for="EventId" />

<div class="text-center">
    @if (Model.AlreadyApplied)
    {
        <h3>Do you really want to cancel your application to the event "@Model.EventName"?</h3>
        <div class="d-flex justify-content-around modal-footer">
            <button type="button" class="btn btn-dark" data-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-success">Apply</button>
        </div>
    }
    else
    {
        <div>
            <h3>Are you sure you want to apply to the event "@Model.EventName"?</h3>
            <br />
            @if (Model.ApplicationRequired)
            {
                <div class="form-group">
                    <label asp-for="ApplicationText"></label>
                    @Html.TextAreaFor(m => m.ApplicationText, new { @class = "form-control form-event-description" })
                </div>
            }
        </div>
        <div class="d-flex justify-content-around modal-footer">
            <button type="button" class="btn btn-dark" data-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-success">Apply</button>
        </div>
    }
</div>
@using Eventive.Models.Users;
@model UserProfileViewModel

<div class="container">
    <div class="main-body">
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            @if (!string.IsNullOrEmpty(Model.ProfileImage))
                            {
                                <img src="data:image/png;base64, @Model.ProfileImage" width="150">
                            }
                            else
                            {
                                <img src="~/images/default_profile.png" alt="Profile Picture">
                            }
                            <div class="mt-3">
                                <h4>@Model.FullName</h4>
                                @if (!string.IsNullOrEmpty(Model.CityCountry))
                                {
                                    <p class="text-secondary mb-1">@Model.CityCountry</p>
                                }
                                <button class="btn btn-outline-primary">Message</button>
                            </div>
                        </div>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.LinkToSocialM))
                {
                    <div class="card mt-3">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-globe mr-2 icon-inline"><circle cx="12" cy="12" r="10"></circle><line x1="2" y1="12" x2="22" y2="12"></line><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path></svg>Social Media</h6>
                                <span class="text-secondary">@Model.LinkToSocialM</span>
                            </li>
                        </ul>
                    </div>
                }
            </div>

            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="d-flex justify-content-center">Profile details:</h6>
                            </div>
                        </div>
                        <hr />
                        @if (!string.IsNullOrEmpty(Model.Email))
                        {
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Email</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Model.Email
                                </div>
                            </div>
                            <hr />
                        }
                        @if (!string.IsNullOrEmpty(Model.PhoneNo))
                        {
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Phone number</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Model.PhoneNo
                                </div>
                            </div>
                            <hr />
                        }
                        @if (!string.IsNullOrEmpty(Model.CityCountry))
                        {
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Address</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Model.CityCountry
                                </div>
                            </div>
                            <hr />
                        }
                        @if (!string.IsNullOrEmpty(Model.DateOfBirth))
                        {
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Date of birth</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Model.DateOfBirth
                                </div>
                            </div>
                            <hr />
                        }
                        <div class="row">
                            <div class="col-sm-12">
                                <a href="#" class="btn btn-primary" onclick="LoadEditProfile('@Model.Id')" data-toggle="modal" data-target="#editProfileModal">Edit</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
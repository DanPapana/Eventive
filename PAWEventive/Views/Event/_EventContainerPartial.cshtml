@using PAWEventive.Models.Events;
@model EventListViewModel;
@{

    ViewData["Title"] = "Events";
}

<div class="container" id="toSearch">
    <div class="row mt-5 justify-content-start">

        @foreach (var oneEvent in Model.EventViewModelList)
        {
            <div class="card text-light bg-secondary card-custom mx-2 mb-3" style="width: 22rem">
                <img class="card-img-top" style="padding: 0.625rem" src="/images/hangout.png" alt="Event thumbnail">
                <div class="card-img-overlay" style="max-height: 5rem">
                    <div class="d-flex justify-content-between">
                        <div class="event-date">@oneEvent.EventDeadline</div>
                        <div class="event-category">@oneEvent.Category</div>
                    </div>
                </div>

                <div class="card-body d-flex flex-column">
                    <h4 class="card-title title">@oneEvent.Title</h4>
                    <div class="d-flex justify-content-between">
                        <p class="card-text">@oneEvent.ParticipationFee</p>
                        <p>Participants: @oneEvent.EventMaximumParticipants</p>
                    </div>

                    <p class="card-text location">📍 @oneEvent.Location</p>

                    <div class="mt-auto">

                        <div class="dropup">
                            <button class="btn btn-outline-light btn-sm btn-block mb-2" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Details
                            </button>
                            <div class="dropdown-menu details-drop">

                                <p class="card-text">@oneEvent.EventDescription</p>

                                <hr />

                                <div class="d-flex justify-content-between">
                                    <p class="card-text">Host:</p>
                                    <p>@oneEvent.UserName</p>
                                </div>

                                <div class="d-flex justify-content-between">
                                    <p class="card-text">Phone number:</p>
                                    <p>@oneEvent.UserPhoneNo</p>
                                </div>

                                <div class="d-flex justify-content-between">
                                    <p class="card-text">Email:</p>
                                    <p>@oneEvent.UserEmail</p>
                                </div>
                            </div>
                        </div>

                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (Model.EventsFollowed.Contains(oneEvent.Id))
                            {
                                <button id="follow-@oneEvent.Id" style="display:none" onclick="followEvent('@oneEvent.Id')" class="btn btn-info btn-lg btn-block">Follow</button>
                                <button id="following-@oneEvent.Id" onclick="followEvent('@oneEvent.Id')" class="btn btn-success btn-lg btn-block">Following ✓</button>
                            }
                            else
                            {
                                <button id="follow-@oneEvent.Id" onclick="followEvent('@oneEvent.Id')" class="btn btn-info btn-lg btn-block">Follow</button>
                                <button id="following-@oneEvent.Id" style="display:none" onclick="followEvent('@oneEvent.Id')" class="btn btn-success btn-lg btn-block">Following ✓</button>
                            }

                            <button id="apply-@oneEvent.Id" type="button" class="btn btn-primary btn-lg btn-block">Apply</button>
                            <button id="applied-@oneEvent.Id" type="button" style="display:none" class="btn btn-outline-warning btn-lg btn-block">Cancel Application</button>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
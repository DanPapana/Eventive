@using PAWEventive.Models.Events;
@model EventListViewModel;
@{
    ViewData["Title"] = "Events";
}

<div class="d-flex justify-content-end">
    <button class="btn btn-danger" data-toggle="modal" data-target="#newEventModal">Create</button>
    <div class="active-cyan-3 active-cyan-2 mb-5 mt-5 col-md-5">
        <input class="form-control" type="text" placeholder="Don't click, I'm not ready" aria-label="Search">
    </div>
</div>


<form id="newEventForm" method="post" asp-controller="Event" asp-action="NewEvent"
      data-ajax="true"
      data-ajax-method="POST"
      data-ajax-mode="replace"
      data-ajax-update="#newEventBody">

    @Html.AntiForgeryToken()
    <div class="modal" id="newEventModal" tabindex="-1" role="dialog" aria-labelledby="newEventModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title font-weight-bold" id="newEventModalLabel">New Event</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div id="newEventBody" class="modal-body">
                    @await Html.PartialAsync("_AddEventPartial", new NewEventViewModel { CreatorId = Model.CreatorId })
                </div>
                <div id="createFailureMessage" class="text-danger ml-5"></div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary shadow-button" data-dismiss="modal">Close</button>
                    <button id="createButton" type="submit" class="btn btn-danger shadow-button">Create</button>
                </div>
            </div>
        </div>
    </div>
</form>

<div class="row d-flex justify-content-around filter-box">
    <div>
        <div class="img-thumbnail">
            <img src="/images/hangout.png" alt="Hangouts" class="filter-icons">
        </div>
        <div class="filter-text">Hangouts</div>
    </div>
    <div>
        <div class="img-thumbnail">
            <img src="/images/education.png" alt="Education" class="filter-icons">
        </div>
        <div class="filter-text">Education</div>
    </div>
    <div>
        <div class="img-thumbnail">
            <img src="/images/entertainment.png" alt="Entertainment" class="filter-icons">
        </div>
        <div class="filter-text">Entertainment</div>
    </div>
    <div>
        <div class="img-thumbnail">
            <img src="/images/network.png" alt="Network" class="filter-icons">
        </div>
        <div class="filter-text">Network</div>
    </div>
    <div>
        <div class="img-thumbnail">
            <img src="/images/other.png" alt="Other" class="filter-icons">
        </div>
        <div class="filter-text">Other</div>
    </div>
</div>

<hr />

<div class="container">
    <div class="row mt-5 justify-content-start">
        @foreach (var oneEvent in Model.EventViewModelList)
        {
            <div class="card text-light bg-secondary card-custom mx-2 mb-3" style="width: 22rem;">
                <img class="card-img-top" style="padding: 0.625rem" src="/images/hangout.png" alt="Event thumbnail">
                <div class="card-img-overlay">
                    <div class="d-flex justify-content-between">
                        <div class="event-date">@oneEvent.EventDeadline</div>
                        <div class="event-category">@oneEvent.Category</div>
                    </div>
                </div>

                <div class="card-body d-flex flex-column">
                    <h4 class="card-title">@oneEvent.Title</h4>
                    <div class="d-flex justify-content-between">
                        <p class="card-text">@oneEvent.ParticipationFee</p>
                        <p>Participants: @oneEvent.EventMaximumParticipants</p>
                    </div>

                    <p class="card-text">📍 @oneEvent.Location</p>

                    <div style="display:none" class="details">
                        <p class="card-text">@oneEvent.EventDescription</p>
                        <p class="card-text">Host: @oneEvent.UserName</p>
                        <ul class="card-text" style="list-style-type:none;">
                            <li>Phone: @oneEvent.UserPhoneNo</li>
                            <li>Email: @oneEvent.UserEmail</li>
                        </ul>
                    </div>

                    <div class="mt-auto">
                        <button type="button" class="btn btn-outline-light btn-sm btn-block">Details</button>
                        <button type="button" class="btn btn-info btn-lg btn-block">Follow</button>
                        <button type="button" class="btn btn-primary btn-lg btn-block">Apply</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>